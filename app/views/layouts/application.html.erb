<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/d850344723.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="social"></div>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

        <% if user_signed_in? %>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-home"></i>
          <%= link_to "Home", root_path %>
        </a>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-users"></i>
          <%= link_to "Users", user_session_path %>
        </a>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-book-open"></i>
          <%= link_to "Books", books_path  %>
        </a>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-sign-out-alt"></i>
          <%= link_to "Log out", destroy_user_session_path  %>
        </a>
      <% else %>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-home"></i>
          <%= link_to "Home", root_path %>
        </a>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-link"></i>
          <%= link_to "About", homes_about_path %>
        </a>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-user-plus"></i>
          <%= link_to "Sign Up", new_user_registration_path  %>
        </a>
        <a class="nav-link text-light" href="/">
          <i class="fas fa-sign-in-alt"></i>
          <%= link_to "Log in", user_session_path   %>
        </a>
      <% end %>
        </ul>
       </div>
      </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
