<% @book.each do |book| %>
<div>
  <h1>User info</h1>
  <%= image_tag book.get_image %>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p>name: <%= book.user_name %></p>
  <p>introduction: <%= book.caption %></p>
</div>

<div>
  <h1>New book</h1>
  <p>Title: <%= book.title %></p>
  <p>Opinion: <%= book.caption %></p>
  <%= book."Create book" %>
</div>
<% end %>
