
<div>
  <h1>User info</h1>
  <p><%#= image_tag 'sample-author1.jpg' %></p>
  <p>name: <%#= book.user_name %></p>
  <p>introduction: <%#= book.caption %></p>
</div>


  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create book" %>
<% end %>


    <p id="notice"></p>
     <table>
      <tablehead>
       <tr>
         <th>Book detail</th>
         <th colspan="4"></th>
       </tr>
     </tablehead>

     <tablebody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.image %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      </tr>
 <% end %>
   </tablebody>
