<div><%= flash[:notice] %></div>


<div calss="container">
  <div class="row">
    <div class="col-lg-4">
  <h1>User info</h1>
  <p><%= image_tag @user.get_profile_image(100, 100) %></p>
  <p>name: <%= @user.name %></p>
  <p>introduction: <%= @user.introduction %></p>


  <h1>New book</h1>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create book" %>
<% end %>
</div>


  <div class="col-lg-8">
  <table class="table table-striped">
   <p id="notice"></p>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
     <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
   </div>
     <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= @user.user_id %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <!--<td><%= link_to "Edit", edit_user_path(book.id) %></td>-->
        <!--<td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>-->
      </tr>
    <% end %>
    </tbody>
  </div>
</div>
</div>






