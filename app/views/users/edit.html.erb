 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= form_with model: @user do |f| %>
       <h1>User info</h1>

        <h4>Name</h4>
         <%= f.text_field :name %>

        <h4>Image</h4>
         <%= f.file_field :profile_image, accept: "image/*" %>

        <h4>Introduction</h4>
         <%= f.text_area :introduction %>

         <%= f.submit "Update User" %>
     <% end %>
     </div>
    </div>
 </div>
